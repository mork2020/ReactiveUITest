<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AvaloniaNugetSearcher.ViewModels;assembly=AvaloniaNugetSearcher"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AvaloniaNugetSearcher.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaNugetSearcher.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="ReactiveTest"
        Name="wndMain">
  
    <DockPanel Margin="12" Background="AntiqueWhite" Height="30">
      <TextBlock DockPanel.Dock="Left" FontSize="16" FontWeight="SemiBold" Text="Search for:" Background="YellowGreen" HorizontalAlignment="Left"/>
      <TextBox DockPanel.Dock="Right" Name="tbSearchTerm" Background="Coral" HorizontalAlignment="Stretch"/>      
    </DockPanel>   

</Window>
