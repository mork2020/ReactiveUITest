        xmlns:vm="clr-namespace:AvaloniaNugetSearcher.ViewModels;assembly=AvaloniaNugetSearcher"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AvaloniaNugetSearcher.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaNugetSearcher.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="ReactiveTest"
        Name="wndMain">
  
    <StackPanel Margin="12" Orientation="Horizontal" DockPanel.Dock="Top" Background="AntiqueWhite" HorizontalAlignment="Stretch" Height="30">
